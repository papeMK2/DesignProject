@{
    string huga = string.Empty;
    int hoge = 0;
}

<link href="~/css/navbar.css" rel="stylesheet" />
<style>
    body {
        min-height: inherit;
    }
    img {
        display: block;
        margin-left: auto;
        margin-right: auto;
        max-height: 80%;
        max-width: 90%;
    }
</style>

<script>
    $("#send").click(function () {
        document.getElementById("hoge").innerText = "@hoge";
    });
</script>

<script>
    function change() {
        @{
            hoge++;
            huga = "hoge";
        }
        document.getElementById("hoge").innerText = "@hoge";
        "@hoge" = document.getElementById("hoge").innerText;
    }
</script>

<div class="container">
    <div class="jumbotron">
        <div style="background-color: #ffffff; margin: 0px; padding: 0px">
            <img  src="~/Image/background/JP_5-11-2013.jpg" />
        </div>
    </div>
</div>